@{
    ViewBag.Title = "Home Page";
}

<!-- Main Content Start -->
<main class="main">

    <!-- Slider Start -->
    <section ng-init="SliderList()" class="carousel-slider-main text-center border-top border-bottom bg-white">
            <div class="owl-carousel owl-carousel-slider ">
                <div ng-repeat="s in SliderListData" class="item">
                    <a href="/Home/shop?Main={{s.SUrl}}"><img class="img-fluid img-responsive" src="~/images/SliderImg/{{s.SliderImage}}" alt="First slide"></a>
                </div>
            </div>
        </section>
    <style>
        .owl-controls
        {
            margin-top:-25px!important;

        }
        .owl-pagination clickable {
            background-color: white !important;
        }
        .item img {
            height: auto;
        }
        @@media only screen and (max-width: 767px) {
             .item {

                height: 25ch;
            }
            .item img{
                width:100vh;
                height: 200px;
            }
        }
        </style>
   
    <!-- Slider End -->
    <!-- Category Section Start -->
    <section class="popular-categories section-padding" ng-init="GetMainCateData()">
        <div class="container wow fadeIn animated">
            <h3 class="section-title mb-20">Categories</h3>
            <div class="carausel-6-columns-cover position-relative">
                <div class="slider-arrow slider-arrow-2 carausel-6-columns-arrow" id="carausel-6-columns-arrows"></div>
                <div class="carausel-6-columns" id="carausel-6-columns">
                    <div class="card-1" ng-repeat="m in MainCateData">
                        <figure class=" img-hover-scale overflow-hidden">
                            <a href="/Home/shop?Main={{m.MUrl}}">
                                <img src="~/images/MainCate/{{m.MImage}}" loading="lazy" alt="category-name" class="w-100 img-fluid">
                            </a>
                        </figure>
                    </div>
          
                </div>
            </div>
        </div>
    </section>
    <!-- Category Section End -->
    <!-- Products Section Start -->
    <section class="product-tabs section-padding bg-light fadeIn animated">
        <div class="container">
            <h3 class="section-title mb-20">New Arivals</h3>
            <div class="tab-content wow fadeIn animated" ng-init="GetProduct()">
                <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                    <div class="row product-grid-4">
                        <div class="col-lg-3 col-6 col-sm-4" ng-repeat="p in ProductData">
                            <div class="product-cart-wrap mb-30">
                                <div class="product-img-action-wrap">
                                    <div class="product-img product-img-zoom">
                                        <a href="/Home/Gift/{{p.PUrl}}">
                                            <img class="default-img img-fluid" src="~/images/ProductImg/{{p.ProductImage}}" loading="lazy" alt="product-image">
                                            <img class="hover-img img-fluid" src="~/images/ProductImg/{{p.ProductImage}}" loading="lazy" alt="product-hover-image">
                                        </a>
                                    </div>
                                    <div class="product-badges product-badges-position product-badges-mrg" ng-show="p.PLabel!=''">
                                        <span class="hot">{{p.PLabel}}</span>
                                    </div>
                                </div>
                                <div class="product-content-wrap">
                                    <h2 class="mt-2"><a href="/Home/Gift/{{p.PUrl}}">{{p.ProductTitle}}</a></h2>
                                    <div class="product-price">
                                        <span><i class="fa fa-inr" aria-hidden="true"></i> {{p.Price}}/-</span>
                                    </div>
                                    <div class="product-action-1 show">
                                        <a aria-label="Add To Cart" class="action-btn hover-up" ng-click="addItemToCart($index)"><i class="fi-rs-shopping-bag-add"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Products Section End -->
    <!-- Advertisement Start -->
    <section class="banners section-padding" ng-init="BannerList()">
        <div class="container">
            <div class="row g-2 gx-3 justify-content-center">
                <div class="col-lg-4 col-md-6" ng-repeat="b in BannerListData">
                    <div class="banner-img mb-0 wow fadeIn animated  rounded-3">
                        <a href="/Home/shop?Main={{b.BUrl}}">
                            <img src="~/images/BannerImage/{{b.BannerImage}}" loading="lazy" alt="advertisement-image" class="img-fluid rounded-3 w-100 border-light border">
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- Advertisement End -->


</main>
<!-- Main Content End -->
