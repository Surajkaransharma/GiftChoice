
@{
    ViewBag.Title = "AddKeyword";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<script src="~/Angularjs/Admin.js"></script>
<div class="page-wrapper" ng-app="AdminApp" ng-controller="AdminController">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3"> </div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form</li>
                    </ol>
                </nav>
            </div>

        </div>
        <div class="row">
            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body p-4">

                        <form class="row g-3">
                            <div class="col-md-12">
                                <label for="input1" class="form-label"> </label>
                                <input type="text" class="form-control" id="" ng-model="Keyword.Keyword" placeholder="">
                      
                            </div>
                    

                            <div class="col-md-12">
                                <label for="input1" class="form-label">Priority</label>
                                <input type="number" class="form-control" ng-model="Keyword.Priority" id="" placeholder="Priority">
                            </div>


                            <div class="col-md-12">
                                <div class="d-md-flex d-grid align-items-center gap-3">
                                    <button type="button" ng-click="SubmitKeyword()" class="btn btn-primary px-4">Submit</button>
                                    <button type="button" class="btn btn-light px-4">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <div class="col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-lg-flex align-items-center mb-4 gap-3">
                            <div class="position-relative">
                                <input type="text" class="form-control ps-5 radius-30" ng-model="search" placeholder="Search here...">
                                <span class="position-absolute top-50 product-show translate-middle-y"><i class="bx bx-search"></i></span>
                            </div>
                            @*  <div class="ms-auto"><a href="javascript:;" class="btn btn-primary radius-30 mt-2 mt-lg-0" data-bs-toggle="modal" data-bs-target="#createcompany"><i class="bx bxs-plus-square"></i>Add New Company</a></div>*@
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0 table-bordered" ng-init="GetKeyword()">
                                <thead class="table-light">
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Name</th>
                                        <th>Priority</th>
                                        <th>Image</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="m in KeywordData">
                                        <td>{{$index+1}}</td>
                                        <td>{{m.MTitle}}</td>
                                        <td>{{m.Priority}}</td>
                                        <td><img src="~/images/MainCate/{{m.MImage}}" width="50px"></td>

                                        @*<td ng-bind-html="generateImageElement(m.MImage)" class="img64" > </td>*@
                                        @*<td><img ng-src="data:image/jpeg;base64,{{m.MImage}}" width="50px"></td>*@


                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>