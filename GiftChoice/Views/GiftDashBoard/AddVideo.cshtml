
@{
    ViewBag.Title = "AddVideo";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    img {
        width: 50px
    }
</style>

<script src="~/Angularjs/Admin.js"></script>
<div class="page-wrapper" ng-app="AdminApp" ng-controller="AdminController">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Video</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Add Video Form</li>
                    </ol>
                </nav>
            </div>

        </div>
        <div class="row">
            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body p-4">

                        <form class="row g-3">
                            <div class="col-md-12">
                                <label for="input1" class="form-label">Product Title</label>
                                <input type="text" id="VideoTitle" class="form-control" ng-model="Video.VideoTitle" placeholder="Video Title">
                            </div>
                            <div class="col-md-12">
                                <label for="input1" class="form-label">Video     @*<a ng-show="Product.Video!=null && Product.Video!=''" class="badge bg-danger" href="{{'/images/ProductVideo/' + Product.Video}}" title="see video" target="_blank" role="button">See Video</a> &nbsp;&nbsp;&nbsp;&nbsp;   <a ng-show="Product.Video!=null && Product.Video!=''" ng-click="DeleteProductVideo(Product.ProductId)">Delete Video</a>*@</label>
                                <input type="file" id="VideoData" class="form-control" upload-file="Video.VideoData">
                            </div>

                            <div class="col-md-12">
                                <div class="d-md-flex d-grid align-items-center gap-3">
                                    <button type="button" id="btn" ng-click="SubmitVideo()" class="btn btn-primary px-4">Submit</button>
                                    <button type="button" id="edbtn" ng-click="UpdateVideo()" style="display: none" class="btn btn-primary px-4">Update</button>
                                    <button type="button" class="btn btn-light px-4" onClick="refreshPage()">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
            <div class="col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-lg-flex align-items-center mb-4 gap-3">                  




                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0 table-bordered" ng-init="GetVideoData()">
                                <thead class="table-light">
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Video Title</th>                                      
                                        @*<th>Priority</th>*@
                                        @*<th>Image</th>*@
                                        <th>Active</th>

                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="m in VideoDataList">
                                        <td>{{$index+1}}</td>
                                        <td>{{m.VideoTitle}}</td>

                                
                                        <td><a ng-click="VideoActiveDeActive(m.VId)"> <span class="badge {{m.Active==1? 'bg-success' : 'bg-danger'}}">{{m.Active==1?'Active':'Deactive'}}</span></a> </td>
                                        <td><a><i class="bx bxs-pencil" ng-click="GetVideoById(m.VId)"></i></a></td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

