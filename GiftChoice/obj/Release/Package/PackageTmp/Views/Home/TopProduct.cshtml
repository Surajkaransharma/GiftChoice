
@{
    ViewBag.Title = "TopProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <main class="main">

            <!-- Page Breadcrumb Start -->
                <div class="page-header breadcrumb-wrap">
                    <div class="container">
                        <div class="breadcrumb">
                            <a href="index.html" rel="nofollow">Home</a>
                            <span></span> Best Products
                        </div>
                    </div>
                </div>
            <!-- Page Breadcrumb End -->


            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row flex-row-reverse gx-1 g-1">
                        <div class="col-lg-12">
                            <div class="shop-product-fillter">
                                <div class="totall-product">
                                    <p>Welcome to Gift Choice Bhilwara</p>
                                </div>
                            </div>
                            <div class="row product-grid-4 g-1 gx-1" ng-init="GetTopProduct()">
                                <div class="col-lg-2 col-6 col-sm-3" ng-repeat="q in ProductData">
                                    <div data-aos="zoom-in">
                                        <div class="product-cart-wrap mb-10 ">
                                            <div class="product-img-action-wrap">
                                                <div class="product-img product-img-zoom">
                                                    <a href="/Home/Gift?url={{q.PUrl}}">
                                                        <img class="default-img img-fluid" src="~/images/ProductImg/{{q.ProductImage}}" loading="lazy" alt="product-image" loading="lazy" alt="">
                                                        <img class="hover-img img-fluid" src="~/images/ProductImg/{{q.ProductImage}}" loading="lazy" alt="product-hover-image" loading="lazy" alt="">
                                                    </a>
                                                </div>
                                                <div class="product-badges product-badges-position product-badges-mrg" ng-show="q.PLabel!=''">
                                                    <span class="hot">{{q.PLabel}}</span>
                                                </div>
                                            </div>
                                            <div class="product-content-wrap">
                                                <h2><a href="/Home/Gift?url={{q.PUrl}}">{{q.ProductTitle}}</a></h2>
                                                <div class="product-price">
                                                    <span><i class="fa fa-inr" aria-hidden="true"></i> {{q.Price}}/-</span>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <div class="button-design mt-2">
                                                        <a aria-label="Add To Cart" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight" class="btn theme-button-2" ng-click="addItemToCart($index)"><i class="fi-rs-shopping-bag-add"></i> Add To Cart </a>
                                                    </div>
                                                    <div class="button-design mt-2">
                                                        <a aria-label="View Image" class="btn theme-button-3" ng-click="quickview(q)"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>